<!-- Blog Section Start -->
<div class="rs-inner-blog orange-color pt-100 pb-100 md-pt-70 md-pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12 order-last">
                <div class="widget-area">
                    <div class="search-widget mb-50">
                        <div class="search-wrap">
                            <input type="search" placeholder="Searching..." name="s" class="search-input" value="">
                            <button type="submit" value="Search"><i class=" flaticon-search"></i></button>
                        </div>
                    </div>
                    <div class="recent-posts mb-50">
                        <h3 class="widget-title">Recent Posts</h3>
                        <ul>
                            @foreach (var item in Model.RecentBlogs)
                            {
                                <li><a asp-controller="blog" asp-action="details" asp-route-id="@item.Id">@item.Title</a></li>
                            }
                        </ul>
                    </div>
                    <div class="widget-archives mb-50">
                        <h3 class="widget-title">Archives</h3>
                        <ul>
                            <li><a href="#">September 2020</a></li>
                            <li><a href="#">September 2020</a></li>
                        </ul>
                    </div>
                    <div class="widget-archives mb-50">
                        <h3 class="widget-title">Categories</h3>
                        <ul>
                            @foreach (var item in Model.BlogCategories)
                            {
                                <li><a href="#">@item.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="recent-posts mb-50">
                        <h3 class="widget-title">Meta</h3>
                        <ul>
                            <li><a href="#">Log in</a></li>
                            <li><a href="#">Entries feed</a></li>
                            <li><a href="#">Comments feed</a></li>
                            <li><a href="#">WordPress.org</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 pr-50">
                <div class="row">

                    @foreach (var item in Model.Blogs)
                    {
                        <div class="col-lg-12 mb-70">
                            <div class="blog-item">
                                <div class="blog-img">
                                    <a href="#"><img src="~/Uploads/Images/@item.Image" alt=""></a>
                                </div>
                                <div class="blog-content">
                                    <h3 class="blog-title"><a href="#">@item.Title</a></h3>
                                    <div class="blog-meta">
                                        <ul class="btm-cate">
                                            <li>
                                                <div class="blog-date" style="text-transform:capitalize">
                                                    <i class="fa fa-calendar-check-o"></i> @item.CreatedDate.ToString("MMMM dd, yyyy")
                                                </div>
                                            </li>
                                            <li>
                                                <div class="author">
                                                    <i class="fa fa-user-o"></i> @item.CustomUser.Name
                                                </div>
                                            </li>
                                            <li>
                                                <div class="tag-line">
                                                    <i class="fa fa-book"></i>
                                                    <a href="#">@item.BlogCategory.Name</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="blog-desc">
                                        @Html.Raw(item.Content.Substring(0, 150))...
                                    </div>
                                    <div class="blog-button">
                                        <a class="blog-btn" asp-controller="blog" asp-action="details" asp-route-id="@item.Id">Continue Reading</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog Section End -->  