@model VmEmail
@{
    ViewData["Title"] = "SendMail";
}

<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Send Mail
    </h2>
</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <div class="intro-y box p-5">
            <form asp-area="admin" asp-controller="subscribe" asp-action="sendmail" method="post">
                <div class="text-danger" style="color:red;" asp-validation-summary="All"></div>

                <div>
                    <label>Subject</label>
                    <input asp-for="Subject" class="input w-full border mt-2" placeholder="Input text">
                    <span asp-validation-for="Subject" style="color:red;"></span>
                </div>

                <div>
                    <label>Message</label>
                    <textarea asp-for="Content" class="input w-full border mt-2"></textarea>
                    <span asp-validation-for="Content" style="color:red;"></span>
                </div>
                <div class="text-right mt-5">
                    <a asp-area="admin" asp-controller="subscribe" asp-action="index" class="button w-24 border text-gray-700 mr-1">Cancel</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Send</button>
                </div>
            </form>
        </div>
        <!-- END: Form Layout -->
    </div>
</div>