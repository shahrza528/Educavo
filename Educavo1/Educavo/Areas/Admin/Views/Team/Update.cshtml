@model Team
@{
    ViewData["Title"] = "Update";
}

<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Update Team
    </h2>
</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red; margin-bottom:30px;"></div>
            <div class="intro-y box p-5">
                <input asp-for="Id" hidden />
                <input asp-for="Image" hidden />
                <div>
                    <label asp-for="ImageFile">Product Name</label>
                    <img src="~/Uploads/Images/@Model.Image" alt="Alternate Text" />
                    <input asp-for="ImageFile" class="input w-full border mt-2">
                </div>
                <div>
                    <label asp-for="FullName">Fullname</label>
                    <input asp-for="FullName" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div class="mt-3">
                    <label asp-for="PositionId">Position</label>
                    <div class="mt-2">
                        <select asp-for="PositionId" asp-items="@(new SelectList(ViewBag.Position, "Id", "Name"))" data-placeholder="Select your favorite actors" class="select2 w-full">
                            <option selected="" disabled>Select position</option>
                        </select>
                    </div>
                </div>
                <div>
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="input w-full border mt-2" placeholder="Input text">
                </div>

                <div>
                    <label asp-for="Phone">Phone</label>
                    <input asp-for="Phone" class="input w-full border mt-2" placeholder="Input text">
                </div>
                <div class="mt-3">
                    <label asp-for="StudentCount">Student count</label>
                    <div class="relative mt-2">
                        <input asp-for="StudentCount" class="input pr-16 w-full border col-span-4" placeholder="Student count">
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="CourseId">Course</label>
                    <div class="mt-2">
                        <select asp-for="CourseId" asp-items="@(new SelectList(ViewBag.Course, "Id", "Title"))" data-placeholder="Select your favorite actors" class="select2 w-full">
                            <option selected="" disabled>Select course</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3 social">
                    <span id="addSocial">+</span>
                    @{ int i = 0; }
                    @foreach (var item in Model.SocialToTeams)
                    {
                        <div class="social-item">
                            <label asp-for="SocialToTeams[i].SocialId">Social</label>
                            <div class="mt-2">
                                <select asp-for="SocialToTeams[i].SocialId" asp-items="@(new SelectList(ViewBag.Social, "Id", "Name"))" data-placeholder="Select your favorite actors" class="select2 w-full">
                                    <option selected="" disabled>Select social</option>
                                </select>
                            </div>

                            <label asp-for="SocialToTeams[i].Link">Link</label>
                            <input asp-for="SocialToTeams[i].Link" class="input w-full border mt-2" placeholder="Input text">

                            <span class="deleteSocial">x</span>
                        </div>
                        <hr style="margin:10px 0px" />
                        i++;
                    }
                </div>

                <div class="mt-3">
                    <label asp-for="Info">Info</label>
                    <div class="mt-2">
                        <textarea data-feature="basic" asp-for="Info" style=" height: 70px; width: 100%; border: 1px solid #b5bdc7; border-radius: 5px;"></textarea>
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Description">Description</label>
                    <div class="mt-2">
                        <textarea data-feature="basic" asp-for="Description" style=" height: 100px; width: 100%; border: 1px solid #b5bdc7; border-radius: 5px;"></textarea>
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Description2">Description 2</label>
                    <div class="mt-2">
                        <textarea data-feature="basic" asp-for="Description2" style=" height: 100px; width: 100%; border: 1px solid #b5bdc7; border-radius: 5px;"></textarea>
                    </div>
                </div>
                <div class="text-right mt-5">
                    <a asp-area="admin" asp-controller="team" asp-action="index" class="button w-24 border text-gray-700 mr-1">Cancel</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Update</button>
                </div>
            </div>
        </form>
        <!-- END: Form Layout -->
    </div>
</div>